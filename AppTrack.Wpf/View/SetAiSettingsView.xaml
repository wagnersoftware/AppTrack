<Window
    x:Class="AppTrack.WpfUi.View.SetAiSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:AppTrack.WpfUi.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:AppTrack.WpfUi.Helpers"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:AppTrack.WpfUi.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AI Settings"
    Width="1000"
    Height="1200"
    mc:Ignorable="d">
    <Window.Resources>
        <converter:ErrorsDictionaryConverter x:Key="ErrorsDictConverter" />
    </Window.Resources>
    <StackPanel>
        <Grid Margin="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition Height="*" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <!--  Api Key  -->
            <Label
                Grid.Row="0"
                Grid.Column="0"
                Margin="0,5,5,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top">
                Api Key:
            </Label>
            <StackPanel
                Grid.Row="0"
                Grid.Column="1"
                Margin="5">
                <PasswordBox x:Name="PasswordBox" helpers:PasswordBoxHelper.BoundPassword="{Binding Model.ApiKey}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="PasswordChanged">
                            <i:InvokeCommandAction Command="{Binding ResetErrorsCommand}" CommandParameter="ApiKey" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </PasswordBox>
                <ItemsControl ItemsSource="{Binding Errors, Converter={StaticResource ErrorsDictConverter}, ConverterParameter=ApiKey}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                FontSize="12"
                                Foreground="Red"
                                Text="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <!--  Prompt parameter  -->
            <Label
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,5,5,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top">
                Prompt Parameter:
            </Label>
            <Border
                Grid.Row="1"
                Grid.Column="1"
                Height="250"
                Margin="5"
                BorderBrush="Black"
                BorderThickness="0.5">
                <ScrollViewer Style="{StaticResource TextBoxScrollViewerStyle}" VerticalScrollBarVisibility="Auto">
                    <ScrollViewer.Resources />
                    <ItemsControl
                        d:ItemsSource="{d:SampleData}"
                        ItemsSource="{Binding Model.PromptParameter}"
                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="5"
                                    Padding="5"
                                    Background="White"
                                    BorderBrush="Gray"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="7*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel
                                            Grid.Column="0"
                                            Margin="4"
                                            DockPanel.Dock="Left">
                                            <TextBlock
                                                FontWeight="Bold"
                                                Text="{Binding Key}"
                                                TextWrapping="Wrap" />
                                            <TextBlock Text="{Binding Value}" TextWrapping="Wrap" />
                                        </StackPanel>

                                        <StackPanel
                                            Grid.Column="1"
                                            Margin="5"
                                            VerticalAlignment="Center"
                                            DockPanel.Dock="Right"
                                            Orientation="Vertical">
                                            <Button
                                                Width="60"
                                                Margin="4"
                                                Command="{Binding DataContext.EditPromptParameterCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Content="Edit" />
                                            <Button
                                                Width="60"
                                                Margin="4"
                                                Command="{Binding DataContext.DeletePromptParameterCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding TempId}"
                                                Content="Delete" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
            <!--  Add Prompt Parameter Button  -->
            <Button
                Grid.Row="2"
                Grid.Column="1"
                Margin="5"
                Command="{Binding AddPromptParameterCommand}"
                Content="Add" />
            <!--  Prompt  -->
            <Label
                Grid.Row="3"
                Grid.Column="0"
                Margin="0,5,5,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top">
                Prompt:
            </Label>
            <StackPanel
                Grid.Row="3"
                Grid.Column="1"
                Margin="5">
                <TextBox
                    Height="670"
                    AcceptsReturn="True"
                    HorizontalScrollBarVisibility="Auto"
                    Text="{Binding Model.PromptTemplate}"
                    ToolTip="{Binding Model.Prompt}"
                    VerticalScrollBarVisibility="Auto">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="TextChanged">
                            <i:InvokeCommandAction Command="{Binding ResetErrorsCommand}" CommandParameter="PromptTemplate" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>
                <ItemsControl ItemsSource="{Binding Errors, Converter={StaticResource ErrorsDictConverter}, ConverterParameter=PromptTemplate}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                FontSize="12"
                                Foreground="Red"
                                Text="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <!--  Buttons  -->
            <StackPanel Grid.Row="4" Grid.ColumnSpan="2">
                <Button
                    Width="150"
                    Margin="5,20,5,5"
                    HorizontalAlignment="Center"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Content="Save" />
                <Button
                    Width="150"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Content="Cancel" />
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
