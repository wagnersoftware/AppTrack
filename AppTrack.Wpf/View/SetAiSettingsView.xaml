<Window
    x:Class="AppTrack.WpfUi.View.SetAiSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:AppTrack.WpfUi.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:AppTrack.WpfUi.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AI Settings"
    Width="600"
    Height="800"
    mc:Ignorable="d">
    <Window.Resources>
        <converter:ErrorsDictionaryConverter x:Key="ErrorsDictConverter" />
    </Window.Resources>
    <StackPanel>
        <Grid Margin="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition Height="*" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <!--  Api Key  -->
            <Label
                Grid.Row="0"
                Grid.Column="0"
                Margin="0,5,5,0"
                HorizontalAlignment="Right">
                Api Key:
            </Label>
            <StackPanel
                Grid.Row="0"
                Grid.Column="1"
                Margin="5">
                <TextBox Text="{Binding Model.ApiKey}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="TextChanged">
                            <i:InvokeCommandAction Command="{Binding ResetErrorsCommand}" CommandParameter="ApiKey" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>
                <ItemsControl ItemsSource="{Binding Errors, Converter={StaticResource ErrorsDictConverter}, ConverterParameter=ApiKey}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                FontSize="12"
                                Foreground="Red"
                                Text="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <!--  Prompt parameter  -->
            <Label
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,5,5,0"
                HorizontalAlignment="Right">
                Prompt Parameter:
            </Label>
            <Border
                Grid.Row="1"
                Grid.Column="1"
                Margin="5"
                Padding="8"
                BorderBrush="Black"
                BorderThickness="1">
                <StackPanel>
                    <ScrollViewer Height="100" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Model.PromptParameter}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Padding="8"
                                        BorderBrush="#DDD"
                                        BorderThickness="0,0,0,1">
                                        <StackPanel>
                                            <!--  Key  -->
                                            <TextBlock
                                                Margin="0,0,0,4"
                                                FontWeight="Bold"
                                                Foreground="DarkSlateGray"
                                                Text="{Binding Key}" />
                                            <!--  Value  -->
                                            <TextBlock
                                                Foreground="Black"
                                                Text="{Binding Value}"
                                                TextWrapping="Wrap"
                                                ToolTip="{Binding Value}" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>
            <!--  Add/Edit Prompt Parameter Button  -->
            <Button
                Grid.Row="2"
                Grid.Column="1"
                Margin="5"
                Command="{Binding EditPromptParameterCommand}"
                Content="Add/Edit" />
            <!--  Prompt  -->
            <Label
                Grid.Row="3"
                Grid.Column="0"
                Margin="0,5,5,0"
                HorizontalAlignment="Right">
                Prompt:
            </Label>
            <StackPanel
                Grid.Row="3"
                Grid.Column="1"
                Margin="5">
                <TextBox
                    Height="420"
                    AcceptsReturn="True"
                    HorizontalScrollBarVisibility="Auto"
                    Text="{Binding Model.PromptTemplate}"
                    ToolTip="{Binding Model.Prompt}"
                    VerticalScrollBarVisibility="Auto">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="TextChanged">
                            <i:InvokeCommandAction Command="{Binding ResetErrorsCommand}" CommandParameter="PromptTemplate" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>
                <ItemsControl ItemsSource="{Binding Errors, Converter={StaticResource ErrorsDictConverter}, ConverterParameter=PromptTemplate}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                FontSize="12"
                                Foreground="Red"
                                Text="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <!--  Buttons  -->
            <StackPanel Grid.Row="4" Grid.Column="2">
                <Button
                    Margin="5,20,5,5"
                    HorizontalAlignment="Stretch"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Content="Save" />
                <Button
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Content="Cancel" />
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
