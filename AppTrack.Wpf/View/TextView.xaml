<Window
    x:Class="AppTrack.WpfUi.View.TextView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AppTrack.WpfUi.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:AppTrack.WpfUi.ViewModel"
    Title="{Binding WindowTitle}"
    Width="750"
    Height="600"
    d:DataContext="{d:DesignInstance Type=viewModel:TextViewModel}"
    ResizeMode="CanResizeWithGrip"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--  <TextBox  -->
        <TextBox
            Grid.Row="0"
            AcceptsReturn="True"
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="True"
            Text="{Binding Text}"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />
        <!--  Usermessage Textblock  -->
        <TextBlock
            Grid.Row="1"
            FontSize="12"
            Foreground="Red"
            Text="{Binding UserMessage}"
            TextWrapping="Wrap" />
        <!--  Copy text Button  -->
        <Button
            Grid.Row="2"
            Margin="5"
            HorizontalAlignment="Left"
            Command="{Binding CopyTextPlainCommand}">
            Copy text
        </Button>
        <!--  Close Button  -->
        <Button
            Grid.Row="2"
            Margin="5"
            HorizontalAlignment="Right"
            Command="{Binding CloseCommand}"
            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}">
            Close
        </Button>
    </Grid>
</Window>
