<Window
    x:Class="AppTrack.WpfUi.View.CreateJobApplicationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:AppTrack.WpfUi.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:AppTrack.WpfUi.ViewModel"
    Title="Create Job Application"
    Width="600"
    Height="850"
    d:DataContext="{d:DesignInstance Type=viewModel:CreateJobApplicationViewModel}"
    mc:Ignorable="d">
    <Window.Resources>
        <converter:ErrorsDictionaryConverter x:Key="ErrorsDictConverter" />
    </Window.Resources>
    <StackPanel>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <!--  Name  -->
            <Label
                Grid.Row="0"
                Grid.Column="0"
                Margin="0,5,5,0"
                HorizontalAlignment="Right">
                Name:
            </Label>
            <StackPanel
                Grid.Row="0"
                Grid.Column="1"
                Margin="5">
                <TextBox Text="{Binding Model.Name}" ToolTip="{Binding Model.Name}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="TextChanged">
                            <i:InvokeCommandAction Command="{Binding ResetErrorsCommand}" CommandParameter="Name" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>
                <ItemsControl ItemsSource="{Binding Errors, Converter={StaticResource ErrorsDictConverter}, ConverterParameter=Name}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                FontSize="12"
                                Foreground="Red"
                                Text="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <!--  Position  -->
            <Label
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,5,5,0"
                HorizontalAlignment="Right">
                Position:
            </Label>
            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                Margin="5">
                <TextBox Text="{Binding Model.Position}" ToolTip="{Binding Model.Position}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="TextChanged">
                            <i:InvokeCommandAction Command="{Binding ResetErrorsCommand}" CommandParameter="Position" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>
                <ItemsControl ItemsSource="{Binding Errors, Converter={StaticResource ErrorsDictConverter}, ConverterParameter=Position}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                FontSize="12"
                                Foreground="Red"
                                Text="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <!--  URL  -->
            <Label
                Grid.Row="2"
                Grid.Column="0"
                Margin="0,5,5,0"
                HorizontalAlignment="Right">
                Url:
            </Label>
            <StackPanel
                Grid.Row="2"
                Grid.Column="1"
                Margin="5">
                <TextBox Text="{Binding Model.URL}" ToolTip="{Binding Model.URL}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="TextChanged">
                            <i:InvokeCommandAction Command="{Binding ResetErrorsCommand}" CommandParameter="URL" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>
                <ItemsControl ItemsSource="{Binding Errors, Converter={StaticResource ErrorsDictConverter}, ConverterParameter=URL}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                FontSize="12"
                                Foreground="Red"
                                Text="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <!--  Job Description  -->
            <Label
                Grid.Row="3"
                Grid.Column="0"
                Margin="0,5,5,0"
                HorizontalAlignment="Right">
                Job Description:
            </Label>
            <StackPanel
                Grid.Row="3"
                Grid.Column="1"
                Margin="5">
                <TextBox
                    Height="340"
                    AcceptsReturn="True"
                    HorizontalScrollBarVisibility="Auto"
                    Text="{Binding Model.JobDescription}"
                    ToolTip="{Binding Model.JobDescription}"
                    VerticalScrollBarVisibility="Auto">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="TextChanged">
                            <i:InvokeCommandAction Command="{Binding ResetErrorsCommand}" CommandParameter="JobDescription" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>
                <ItemsControl ItemsSource="{Binding Errors, Converter={StaticResource ErrorsDictConverter}, ConverterParameter=JobDescription}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                FontSize="12"
                                Foreground="Red"
                                Text="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <!--  Duration  -->
            <Label
                Grid.Row="4"
                Grid.Column="0"
                Margin="0,5,5,0"
                HorizontalAlignment="Right">
                Duration in months:
            </Label>
            <StackPanel
                Grid.Row="4"
                Grid.Column="1"
                Margin="5">
                <TextBox Text="{Binding Model.DurationInMonths}" ToolTip="{Binding Model.DurationInMonths}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="TextChanged">
                            <i:InvokeCommandAction Command="{Binding ResetErrorsCommand}" CommandParameter="DurationInMonths" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>
                <ItemsControl ItemsSource="{Binding Errors, Converter={StaticResource ErrorsDictConverter}, ConverterParameter=DurationInMonths}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                FontSize="12"
                                Foreground="Red"
                                Text="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <!--  Location  -->
            <Label
                Grid.Row="5"
                Grid.Column="0"
                Margin="0,5,5,0"
                HorizontalAlignment="Right">
                Location:
            </Label>
            <StackPanel
                Grid.Row="5"
                Grid.Column="1"
                Margin="5">
                <TextBox Text="{Binding Model.Location}" ToolTip="{Binding Model.Location}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="TextChanged">
                            <i:InvokeCommandAction Command="{Binding ResetErrorsCommand}" CommandParameter="Location" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>
                <ItemsControl ItemsSource="{Binding Errors, Converter={StaticResource ErrorsDictConverter}, ConverterParameter=Location}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                FontSize="12"
                                Foreground="Red"
                                Text="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <!--  Contact Person  -->
            <Label
                Grid.Row="6"
                Grid.Column="0"
                Margin="0,5,5,0"
                HorizontalAlignment="Right">
                Contact Person:
            </Label>
            <StackPanel
                Grid.Row="6"
                Grid.Column="1"
                Margin="5">
                <TextBox Text="{Binding Model.ContactPerson}" ToolTip="{Binding Model.ContactPerson}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="TextChanged">
                            <i:InvokeCommandAction Command="{Binding ResetErrorsCommand}" CommandParameter="ContactPerson" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>
                <ItemsControl ItemsSource="{Binding Errors, Converter={StaticResource ErrorsDictConverter}, ConverterParameter=ContactPerson}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                FontSize="12"
                                Foreground="Red"
                                Text="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <!--  StartDate  -->
            <Label
                Grid.Row="7"
                Grid.Column="0"
                Margin="0,5,5,0"
                HorizontalAlignment="Right">
                Start date:
            </Label>
            <DatePicker
                Grid.Row="7"
                Grid.Column="1"
                Margin="5"
                DisplayDateStart="{Binding Model.StartDate}"
                SelectedDate="{Binding Model.StartDate}" />
            <!--  Buttons  -->
            <StackPanel
                Grid.Row="8"
                Grid.ColumnSpan="2"
                Margin="5,20,5,5">
                <Button
                    Width="200"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Content="Save" />
                <Button
                    Width="200"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Content="Cancel" />
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
