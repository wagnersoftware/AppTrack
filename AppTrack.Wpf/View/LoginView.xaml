<Window x:Class="AppTrack.WpfUi.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AppTrack Login"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20" Width="250">
        <TextBlock Text="Benutzername:"/>
        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock Text="Passwort:" Margin="0,10,0,0"/>
        <PasswordBox x:Name="PasswordBox"/>
        <DockPanel>
            <CheckBox VerticalAlignment="Center"></CheckBox>
            <Label FontSize="8" Content="Remember me" Style="{StaticResource ResourceKey=SmallLabelStyle}"></Label>
        </DockPanel>
        <Button Content="Register" Command="{Binding RegisterCommand}" Margin="0,20,0,0"/>
        <Button Content="Login" Command="{Binding LoginCommand}" Margin="0,20,0,0"/>
    </StackPanel>
</Window>