<Window
    x:Class="AppTrack.WpfUi.View.EditPromptParameterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:AppTrack.WpfUi.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AppTrack.WpfUi.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Edit Prompt Parameter"
    Width="1200"
    Height="900"
    mc:Ignorable="d">
    <Window.Resources>
        <converter:ErrorsDictionaryConverter x:Key="ErrorsDictConverter" />
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <!--  prompt parameter list  -->
        <Border
            Margin="5"
            Padding="8"
            BorderBrush="Black"
            BorderThickness="1">
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding PromptParameter}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,5"
                                Padding="10"
                                Background="White"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                CornerRadius="8">
                                <Border.Effect>
                                    <DropShadowEffect
                                        BlurRadius="8"
                                        Opacity="0.3"
                                        ShadowDepth="2" />
                                </Border.Effect>

                                <StackPanel Orientation="Horizontal">
                                    <StackPanel
                                        Width="840"
                                        Margin="4"
                                        DockPanel.Dock="Left">
                                        <TextBlock
                                            FontWeight="Bold"
                                            Text="{Binding Key}"
                                            TextWrapping="Wrap" />
                                        <TextBlock Text="{Binding Value}" TextWrapping="Wrap" />
                                    </StackPanel>

                                    <StackPanel
                                        Margin="5"
                                        DockPanel.Dock="Right"
                                        Orientation="Horizontal">
                                        <Button
                                            Margin="5,0"
                                            Padding="10,2"
                                            Command="{Binding DataContext.EditKeyValueItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Content="Edit" />
                                        <Button
                                            Margin="5,0"
                                            Padding="10,2"
                                            Command="{Binding DataContext.DeleteKeyValueItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding TempId}"
                                            Content="Delete" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
        <!--  Add Button  -->
        <Button
            Grid.Row="0"
            Grid.Column="1"
            Width="100"
            Margin="10"
            VerticalAlignment="Top"
            Command="{Binding AddKeyValueItemCommand}"
            Content="Add" />
        <!--  Save/Cancel Buttons  -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2">
            <Button
                Width="150"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Command="{Binding SaveCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                Content="OK" />
            <Button
                Width="150"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                Command="{Binding CancelCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                Content="Cancel" />
        </StackPanel>
    </Grid>
</Window>
