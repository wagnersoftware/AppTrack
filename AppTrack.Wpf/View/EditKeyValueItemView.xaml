<Window
    x:Class="AppTrack.WpfUi.View.EditKeyValueItemView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:AppTrack.WpfUi.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AppTrack.WpfUi.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Add Key-Value Item"
    Width="800"
    Height="620"
    mc:Ignorable="d">
    <Window.Resources>
        <converter:ErrorsDictionaryConverter x:Key="ErrorsDictConverter" />
    </Window.Resources>
    <StackPanel Margin="10">
        <!--  Key  -->
        <TextBlock Margin="5" Text="Key" />
        <TextBox
            Height="30"
            Margin="5,0,5,5"
            AcceptsReturn="True"
            Text="{Binding Model.Key}"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />
        <ItemsControl ItemsSource="{Binding Errors, Converter={StaticResource ErrorsDictConverter}, ConverterParameter=Key}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock
                        FontSize="12"
                        Foreground="Red"
                        Text="{Binding}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <!--  Value  -->
        <TextBlock Margin="5" Text="Value" />
        <TextBox
            Height="350"
            Margin="5,0,5,5"
            AcceptsReturn="True"
            Text="{Binding Model.Value}"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />
        <ItemsControl ItemsSource="{Binding Errors, Converter={StaticResource ErrorsDictConverter}, ConverterParameter=Value}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock
                        FontSize="12"
                        Foreground="Red"
                        Text="{Binding}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <!--  Buttons  -->
        <StackPanel>
            <Button
                Margin="5,20,5,5"
                HorizontalAlignment="Stretch"
                Command="{Binding SaveCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                Content="Save" />
            <Button
                Margin="5"
                HorizontalAlignment="Stretch"
                Command="{Binding CancelCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                Content="Cancel" />
        </StackPanel>
    </StackPanel>
</Window>
