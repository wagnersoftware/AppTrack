<Window
    x:Class="AppTrack.WpfUi.View.SetJobApplicationDefaultsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:AppTrack.WpfUi.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:AppTrack.WpfUi.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Defaults"
    Width="400"
    Height="250"
    mc:Ignorable="d">
    <Window.Resources>
        <converter:ErrorsDictionaryConverter x:Key="ErrorsDictConverter" />
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Grid Margin="10,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <!--  Name  -->
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,5,5,0"
                    HorizontalAlignment="Right">
                    Name:
                </Label>
                <StackPanel
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="5">
                    <TextBox Text="{Binding Model.Name}" ToolTip="{Binding Model.Name}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="TextChanged">
                                <i:InvokeCommandAction Command="{Binding ResetErrorsCommand}" CommandParameter="Name" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBox>
                    <ItemsControl ItemsSource="{Binding Errors, Converter={StaticResource ErrorsDictConverter}, ConverterParameter=Name}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock
                                    FontSize="12"
                                    Foreground="Red"
                                    Text="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
                <!--  Position  -->
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,5,5,0"
                    HorizontalAlignment="Right">
                    Position:
                </Label>
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5">
                    <TextBox Text="{Binding Model.Position}" ToolTip="{Binding Model.Position}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="TextChanged">
                                <i:InvokeCommandAction Command="{Binding ResetErrorsCommand}" CommandParameter="Position" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBox>
                    <ItemsControl ItemsSource="{Binding Errors, Converter={StaticResource ErrorsDictConverter}, ConverterParameter=Position}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock
                                    FontSize="12"
                                    Foreground="Red"
                                    Text="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
                <!--  Buttons  -->
                <StackPanel Grid.Row="3" Grid.Column="2">
                    <Button
                        Margin="5,20,5,5"
                        HorizontalAlignment="Stretch"
                        Command="{Binding SaveCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Content="Save" />
                    <Button
                        Margin="5"
                        HorizontalAlignment="Stretch"
                        Command="{Binding CancelCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Content="Cancel" />
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
