<Window x:Class="AppTrack.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppTrack.Wpf" xmlns:viewmodel="clr-namespace:AppTrack.WpfUi.ViewModel"
        xmlns:models="clr-namespace:AppTrack.Frontend.Models;assembly=AppTrack.Frontend.Models"
        mc:Ignorable="d"
        Title="App Track" Height="800" Width="1500"
        Loaded="Page_Loaded">
    <StackPanel Margin="10">
        <!--Menu-->
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="File">
                    <MenuItem Header="E_xit" Command="{Binding ExitCommand}" />
                </MenuItem>
                <MenuItem Header="Settings">
                    <MenuItem Header="Defaults">
                        <MenuItem Header="Set Defaults" Command="{Binding SetDefaultsCommand}"/>
                    </MenuItem>
                    <MenuItem Header="AI">
                        <MenuItem Header="AI Settings" Command="{Binding AiSettingsCommand}"/>
                    </MenuItem>
                </MenuItem>
            </Menu>
        </DockPanel>
        <!--MainContent-->
        <Button Content="Create Job Application"
                HorizontalAlignment="Right"
                Margin="10"
                Command="{Binding CreateJobApplicationCommand}">
        </Button>
        <DataGrid ItemsSource="{Binding JobApplications}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  d:DataContext="{d:DesignInstance Type=models:JobApplicationModel, IsDesignTimeCreatable=True}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}"></DataGridTextColumn>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Position" Binding="{Binding Position}"></DataGridTextColumn>
                <DataGridTextColumn Header="URL" Binding="{Binding URL}"></DataGridTextColumn>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}"></DataGridTextColumn>
                <DataGridTextColumn Header="Application Text" Binding="{Binding ApplicationText}"></DataGridTextColumn>
                <DataGridTextColumn Header="Created" Binding="{Binding CreationDate}"></DataGridTextColumn>
                <DataGridTextColumn Header="Modified" Binding="{Binding ModifiedDate}"></DataGridTextColumn>
                <DataGridTemplateColumn Header="Functions" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <Button Content="Edit" Margin="5,0,0,0"
                                        Command="{Binding DataContext.EditJobApplicationCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}" />
                                <Button Content="Delete" Margin="5,0,0,0"
                                        Command="{Binding DataContext.DeleteJobApplicationCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding Id}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Window>
